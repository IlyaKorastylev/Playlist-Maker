<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/maket_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_buttons_icon_padding</item>
        <item name="iconTint">@color/maket_black</item>
    </style>

    <style name="SettingsButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:backgroundTint">@color/maket_black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/settings_padding_start</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>